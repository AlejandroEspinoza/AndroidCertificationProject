<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="fugitive"
            type="training.itexico.com.androidcertificationproject.Models.Fugitive"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.BountiesFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/hello_blank_fragment" />

        <training.itexico.com.androidcertificationproject.CustomViews.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:fugitive="@{fugitive}"/>

        <training.itexico.com.androidcertificationproject.CustomViews.FugitiveView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:fugitive="@{fugitive}"/>

    </FrameLayout>
</layout>